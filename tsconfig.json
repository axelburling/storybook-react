{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": false,
    "importHelpers": true,
    "jsx": "react",
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": ".code"
  },
  "include": [
    "node_modules", "theme.ts", "styles.ts"
  ]
}
